<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.newsapp.NewsActivity">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_14dp"
        android:layout_marginRight="@dimen/margin_14dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:maxLines="2"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        tools:text="Sample Title" />

    <TextView
        android:id="@+id/news_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/news_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_14dp"
        tools:text="Sample Author" />

    <TextView
        android:id="@+id/news_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_title"
        android:layout_marginLeft="@dimen/margin_14dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:background="@drawable/rounded_corners_button"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="Sample Section" />


    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_section"
        android:layout_marginLeft="@dimen/margin_14dp"
        android:layout_marginTop="@dimen/margin_14dp"
        tools:text="Sample Date" />

    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/news_date"
        android:layout_marginLeft="@dimen/margin_14dp"
        android:layout_toEndOf="@+id/news_date"
        tools:text="Sample Date" />


</RelativeLayout>